{{link-to 'Back home' 'contacts'}}

<p>The contact is {{model.name}}</p>

<div>
  {{#link-to 'edit' model}}
    <button>Edit this contact</button>
  {{/link-to}}
</div>

<div>
  <button {{action 'deleteContact' model}}>Delete this contact</button>
</div>

{{#each model.addresses as |address|}}
  <div class="address">{{address.street}}</div>
{{else}}
  There are no addresses for this contact
{{/each}}
